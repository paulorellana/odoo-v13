<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="view_account_journal_form_inherit_ptfi" model="ir.ui.view">
        <field name="name">view_account_journal_form_inherit_ptfi</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">

            <xpath expr="//page[@name='advanced_settings']" position="inside">
                <group string="Dirección punto de emisión">
                    <field name="address_point_emission"/>
                </group>
            </xpath>

        </field>
    </record>
    <record id="view_account_journal_form_inherit_ptfi2" model="ir.ui.view">
        <field name="name">view_account_journal_form_inherit_ptfi2</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="gestionit_pe_fe.view_form_acccount_journal_serie_fe"/>
        <field name="arch" type="xml">
            <field name="electronic_invoice" position="after">
                <field name="address_point_emission"/>
            </field>
        </field>
    </record>
    </data>
</odoo>
